<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    style="@style/main_app_theme"

    android:id="@+id/main_layout">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/route2"
            android:text="@string/route2"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_row="2"
            android:layout_column="1"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/route3"
            android:id="@+id/route3"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_row="3"
            android:layout_column="1"/>

    </GridLayout>

    <!--<Button-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:text="@string/simulate"-->
        <!--android:id="@+id/simulateBtn"-->
        <!--android:layout_row="3"-->
        <!--android:layout_column="1"-->
        <!--android:layout_below="@+id/gridLayout"-->
        <!--android:layout_alignRight="@+id/gridLayout"-->
        <!--android:layout_alignEnd="@+id/gridLayout" />-->

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="@string/route1"
        android:id="@+id/route1"
        android:layout_weight="0.5"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
