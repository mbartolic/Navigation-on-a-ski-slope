<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/skiDistFromTurn"
    style="@style/main_app_theme">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        style="@style/txt_Color"
          android:layout_row="0"
          android:layout_column="0" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/txt_Color"
        android:id="@+id/metarDisplay"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="textEnd" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgViewArrow"
        android:layout_row="1"
        android:layout_column="12"
        android:layout_alignTop="@+id/metarDisplay"
        android:layout_toLeftOf="@+id/progressBar2"
        android:layout_toStartOf="@+id/progressBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/m"
        style="@style/txt_Color"
        android:id="@+id/metric"
        android:textSize="50dp"
        android:layout_marginBottom="29dp"
        android:layout_alignBottom="@+id/metarDisplay"
        android:layout_toRightOf="@+id/metarDisplay"
        android:layout_toEndOf="@+id/metarDisplay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txt_Color"
        android:id="@+id/messageDesplaytxt"
        android:layout_above="@+id/metarDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="30dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

